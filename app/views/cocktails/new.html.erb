<div class="new-cocktail">
  <div class="banner" id="banner-show-cocktail" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://fthmb.tqn.com/vClDoc1WlJ4jtZY3qP9rCLuo0jA=/1500x998/filters:no_upscale():fill(transparent,1)/about/LearnLiqueurs1-137079739-56a171373df78cf7726aae44.jpg');">
    <%= render 'layouts/navbar' %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
      <h2>Create your cocktail</h2>
      <%= simple_form_for(@cocktail) do |a| %>
        <%= a.input :name %>
      <div class="photo-upload">
        <%= a.input :photo, as: :attachinary %>
      </div>
        <%= a.submit "Add Now", class: "btn btn-primary" %>
      <% end %>

      </div>
    </div>
  </div>
</div>


