<div class="cocktail list-cocktail">

  <div class="banner-navbar" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://galumbi.de/wp-content/uploads/2015/06/Blue-Moon-Cocktail-1-von-1-2.jpg');">
      <%= render 'layouts/navbar' %>

    <div class="banner-content">
      <h1>Blame it on the alcohol</h1>
      <%= link_to "Start Now", new_cocktail_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <ol class="list-unstyled cocktail-cards">
    <% @cocktails.each do |cocktail| %>
    <div class="cocktail-card">
      <li>
        <h3> <%= link_to cocktail.name, cocktail_path(cocktail) %> </h3>
      </li>
    </div>
    <% end %>
  </ol>






</div>

