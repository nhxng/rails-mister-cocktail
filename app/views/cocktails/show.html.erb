<div class="cocktail show-cocktail">
  <h3><%= @cocktail.name %> <%= @cocktail.id %></h3>

  <p><%= link_to "Back", cocktails_path  %></p>

  <h3>Recipe</h3>
  <div class="recipe">
    <% @cocktail.doses.each do |dose| %>
      <div class="dose-card">
        <p> <%= dose.description %> <%= dose.ingredient.name %></p>
        <p> <%= link_to "Delete", dose_path(dose),method: :delete, data: { confirm: "Are you sure?" }%> </p>
       </div>
    <% end %>
  </div>
  <%= render 'doses/form' %>
</div>

